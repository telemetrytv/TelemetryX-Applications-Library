{
  "name": "rss-reader",
  "version": "1.0.0",
  "displayName": "RSS Feed Reader",
  "description": "Display RSS and Atom feeds with rich content support, automatic rotation, and responsive layouts for digital signage",
  "category": "informational",
  "type": "application",
  "icon": "./assets/icon.svg",
  "thumbnail": "./assets/thumbnail.png",
  "tags": ["rss", "news", "feeds", "content", "information"],
  "author": {
    "name": "TelemetryX",
    "email": "developers@telemetryx.ai",
    "url": "https://telemetryx.ai"
  },
  "mountPoints": {
    "render": {
      "path": "/index.html",
      "title": "RSS Feed Display"
    },
    "settings": {
      "path": "/settings.html",
      "title": "RSS Feed Settings"
    }
  },
  "permissions": [
    "network",
    "storage",
    "device.location"
  ],
  "capabilities": [
    "offline",
    "responsive",
    "accessibility",
    "caching"
  ],
  "requirements": {
    "minScreenWidth": 320,
    "minScreenHeight": 240,
    "networkRequired": true,
    "storageRequired": true
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "sourcefeed": {
        "type": "string",
        "format": "uri",
        "title": "RSS Feed URL",
        "description": "The URL of the RSS or Atom feed to display",
        "examples": [
          "https://feeds.npr.org/1001/rss.xml",
          "https://rss.cnn.com/rss/edition.rss",
          "https://feeds.bbci.co.uk/news/rss.xml"
        ]
      },
      "appType": {
        "type": "string",
        "title": "Feed Type",
        "description": "The type of RSS feed for optimized parsing",
        "enum": ["", "npr-feed", "seattle-times-feed", "custom"],
        "enumNames": ["Generic", "NPR News", "Seattle Times", "Custom Feed"],
        "default": ""
      },
      "transitionInterval": {
        "type": "integer",
        "title": "Item Display Duration (seconds)",
        "description": "How long to display each feed item",
        "minimum": 4,
        "maximum": 300,
        "default": 10
      },
      "refreshInterval": {
        "type": "integer",
        "title": "Feed Refresh Interval (minutes)",
        "description": "How often to check for new feed items",
        "minimum": 1,
        "maximum": 1440,
        "default": 10
      },
      "theme": {
        "type": "string",
        "title": "Display Theme",
        "description": "Visual theme for the RSS display",
        "enum": ["default", "nomixed"],
        "enumNames": ["Default (Dark overlay)", "White Background"],
        "default": "default"
      },
      "hAlign": {
        "type": "string",
        "title": "Text Alignment",
        "description": "Horizontal alignment of text content",
        "enum": ["left", "center", "right"],
        "enumNames": ["Left", "Center", "Right"],
        "default": "left"
      },
      "zoomEffect": {
        "type": "boolean",
        "title": "Image Zoom Effect",
        "description": "Add subtle zoom animation to feed images",
        "default": true
      },
      "playOnlyOne": {
        "type": "boolean",
        "title": "Single Item Mode",
        "description": "Display only one feed item before advancing to next page",
        "default": false
      },
      "noOlderThan": {
        "type": "string",
        "title": "Content Age Limit",
        "description": "Don't show items older than specified duration",
        "enum": ["", "1d", "3d", "1w", "2w", "1m"],
        "enumNames": ["No limit", "1 day", "3 days", "1 week", "2 weeks", "1 month"],
        "default": ""
      }
    },
    "required": ["sourcefeed"],
    "additionalProperties": false
  },
  "presets": [
    {
      "name": "NPR News",
      "description": "Latest news from National Public Radio",
      "config": {
        "sourcefeed": "https://feeds.npr.org/1001/rss.xml",
        "appType": "npr-feed",
        "transitionInterval": 15,
        "refreshInterval": 10
      }
    },
    {
      "name": "CNN Breaking News",
      "description": "Breaking news and latest stories from CNN",
      "config": {
        "sourcefeed": "http://rss.cnn.com/rss/edition.rss",
        "appType": "custom",
        "transitionInterval": 12,
        "refreshInterval": 5
      }
    },
    {
      "name": "BBC World News",
      "description": "International news from the BBC",
      "config": {
        "sourcefeed": "https://feeds.bbci.co.uk/news/world/rss.xml",
        "appType": "custom",
        "transitionInterval": 12,
        "refreshInterval": 10
      }
    },
    {
      "name": "Tech News (Ars Technica)",
      "description": "Latest technology news and analysis",
      "config": {
        "sourcefeed": "https://feeds.arstechnica.com/arstechnica/index",
        "appType": "custom",
        "transitionInterval": 20,
        "refreshInterval": 30
      }
    }
  ],
  "supportedFormats": [
    "RSS 2.0",
    "RSS 1.0", 
    "Atom 1.0",
    "JSON Feed"
  ],
  "features": [
    "Automatic feed parsing and validation",
    "OpenGraph metadata extraction for rich media",
    "Responsive layouts (portrait, landscape, wide screens)",
    "Smooth transitions between feed items",
    "Image zoom effects and animations",
    "Offline caching with fallback content",
    "Multiple visual themes",
    "Configurable content filtering",
    "Auto-rotation with continuity tracking",
    "Error handling and recovery"
  ],
  "performance": {
    "cacheStrategy": "network-first",
    "maxCacheAge": 600000,
    "preloadImages": true,
    "lazyLoadContent": false,
    "memoryOptimized": true
  },
  "accessibility": {
    "highContrast": true,
    "reducedMotion": true,
    "screenReader": "partial",
    "keyboardNavigation": false
  },
  "deployment": {
    "buildCommand": "npm run build",
    "buildOutput": "dist",
    "staticFiles": ["public"],
    "environmentVariables": [],
    "healthCheck": "/index.html"
  },
  "monitoring": {
    "errorReporting": true,
    "performanceMetrics": true,
    "usageAnalytics": true,
    "customEvents": [
      "feed_loaded",
      "item_displayed", 
      "error_occurred",
      "cache_hit",
      "cache_miss"
    ]
  },
  "security": {
    "contentSecurityPolicy": {
      "default-src": "'self'",
      "connect-src": "'self' https:",
      "img-src": "'self' https: data:",
      "style-src": "'self' 'unsafe-inline'",
      "script-src": "'self'"
    },
    "allowedDomains": [
      "feeds.npr.org",
      "rss.cnn.com", 
      "feeds.bbci.co.uk",
      "rss.nytimes.com",
      "feeds.washingtonpost.com",
      "feeds.reuters.com",
      "feeds.arstechnica.com"
    ],
    "dataEncryption": false,
    "userDataCollection": false
  },
  "testing": {
    "testFeeds": [
      "https://feeds.npr.org/1001/rss.xml",
      "https://rss.cnn.com/rss/edition.rss"
    ],
    "mockData": true,
    "performanceTests": true
  },
  "documentation": {
    "userGuide": "./docs/user-guide.md",
    "developerDocs": "./docs/developer.md", 
    "apiReference": "./docs/api.md",
    "troubleshooting": "./docs/troubleshooting.md"
  },
  "license": "MIT",
  "homepage": "https://github.com/telemetryx/applications-library",
  "repository": {
    "type": "git",
    "url": "https://github.com/telemetryx/applications-library.git",
    "directory": "applications/rss"
  },
  "bugs": {
    "url": "https://github.com/telemetryx/applications-library/issues"
  },
  "keywords": [
    "rss",
    "atom", 
    "feeds",
    "news",
    "content",
    "digital-signage",
    "telemetryx",
    "react",
    "typescript"
  ]
}