{
  "name": "telemetryx-weather-app",
  "version": "1.0.0",
  "description": "Weather application for TelemetryX digital signage",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@telemetryx/sdk": "latest",
    "react": "^19.1.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.7.0",
    "vite": "^5.4.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "telemetryx": {
    "type": "application",
    "category": "informational",
    "displayName": "Weather",
    "icon": "./assets/icon.svg",
    "permissions": [
      "location",
      "network"
    ],
    "configSchema": "./config/schema.json"
  }
}